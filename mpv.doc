// ==================== MPV 完整参数列表 ====================

// 窗口与界面
--wid=<窗口ID>                  // 嵌入到指定窗口
--no-border                     // 无边框
--force-window=immediate        // 立即创建窗口

// OSD与控制
--no-osc                        // 禁用屏幕控制器
--no-osd-bar                    // 禁用OSD进度条

// 播放行为
--keep-open=yes                 // 播放完毕保持打开

// 硬件加速
--hwdec=auto                    // 自动硬件解码

// 字幕
--sub-auto=fuzzy                // 模糊匹配外部字幕
--sub-visibility=yes            // 显示字幕
--slang=chi,zho,zh,...          // 字幕语言优先级

// 音频
--alang=chi,zho,zh,...          // 音频语言优先级
--audio-spdif=ac3,dts,...       // 音频透传格式
--audio-channels=auto           // 自动音频声道

// 缓存与预加载
--cache=yes                     // 启用缓存
--demuxer-max-bytes=150M        // 最大缓存（动态调整）
--demuxer-readahead-secs=20     // 预读秒数（动态调整）

// HDR与色彩
--target-trc=auto               // 自动色调响应曲线
--tone-mapping=hable            // 色调映射算法
--hdr-compute-peak=yes          // 计算HDR峰值
--target-prim=auto              // 自动色域匹配

// IPC通信
--input-ipc-server=<管道路径>   // IPC管道路径

/* ==================== 未启用参数（备选） ==================== */

